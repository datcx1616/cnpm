@using DO_AN_1.Models;
@using DO_AN_1.Utilities;
@model IList<Discount>

<div class="row">
    <div class="product__discount__slider owl-carousel">
        @foreach (var item in Model)
        {
         string url = Functions.TitleslugGeneration("products", item.Name, item.Id);
        <div class="col-lg-4">
            <div class="product__discount__item">
                <div class="product__discount__item__pic set-bg"
                     data-setbg="@item.Image">
                    <div class="product__discount__percent">-20%</div>
                    <ul class="product__item__pic__hover">
                            <li><a href="/@url"><i class="fa fa-heart"></i></a></li>
                            <li><a href="/@url"><i class="fa fa-retweet"></i></a></li>
                            <li><a href="/@url"><i class="fa fa-shopping-cart"></i></a></li>
                    </ul>
                </div>
                <div class="product__discount__item__text">
                    <span></span>
                    <h5><a href="#">@item.Name</a></h5>
                    <div class="product__item__price">@item.Price<span></span></div>
                </div>
            </div>
        </div>
        }
    </div>
</div>

