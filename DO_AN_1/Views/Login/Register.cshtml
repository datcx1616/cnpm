@model DO_AN_1.Models.User

<div class="container">
	<div class="row">
		<div class="col text-center">
			<div class="section_title new_arrivals_title">
				<h2>Đăng ký</h2>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col">
			<form method="post" asp-action="Register">
				<div class="form-group">
					<label for="exampleInputEmail1">Họ tên</label>
					<input type="text" class="form-control" id="exampleInputEmail1" asp-for="FullName" placeholder="nhập họ tên">
				</div>
				<div class="form-group">
					<label for="exampleInputEmail1">Tên đăng nhập</label>
					<input type="text" class="form-control" id="exampleInputEmail1" asp-for="UserName" placeholder="nhập tên đăng nhập">
				</div>
				<div class="form-group">
					<label for="exampleInputEmail1">Mật khẩu</label>
					<input type="password" class="form-control" id="exampleInputEmail1" asp-for="Password" placeholder="nhập mật khẩu">
				</div>
				<div class="form-group">
					<label for="exampleInputEmail1">Số điện thoại</label>
					<input type="text" class="form-control" id="exampleInputEmail1" asp-for="PhoneNumber" placeholder="nhập số điện thoại">
				</div>
				<div class="form-group">
					<label for="exampleInputEmail1">Địa chỉ</label>
					<input type="text" class="form-control" id="exampleInputEmail1" asp-for="Address" placeholder="nhập địa chỉ">
				</div>
				<button type="submit" class="btn btn-primary">Đăng ký</button>
			</form>
		</div>
	</div>
</div>