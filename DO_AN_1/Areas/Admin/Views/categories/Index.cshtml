@using DO_AN_1.Models;
@model IList<Categori>
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Danh sách slide</h2>
    </div>
    <p>
		<a class="btn btn-success" asp-area="Admin" asp-controller="Categories" asp-action="Create">
			<i class="bi bi-file-earmark-text me-1"></i>Thêm slide
		</a>
	</p>
	<section class="section dashboard">
		<div class="row">
			<div class="col-12">
				<div class="card recent-sales overflow-auto">
					<div class="card-body mt-4">

						<table class="table table-borderless datatable">
							<thead>
								<tr>
									<th class="col-1 text-center">#</th>
									<th class="col-3 text-center">Tiêu Đề</th>
									<td class="col-2 text-center">Mức</td>
									<td class="col-2 text-center">Menu cha</td>
									<td class="col-1 text-center">Thứ tự</td>
									<td class="col-1 text-center">Ẩn/Hiện</td>
									<th class="col-2 text-center">Chức năng</th>

								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<th class="text-center" scope="row">@item.id</th>
										<td>
											<a asp-area="Admin" asp-controller="Categories" asp-action="Details"
										   asp-route-id="@item.id" class="text-primary">@item.name</a>
										</td>
										<td class="ext-center">@item.controllerName</td>
										<td class="ext-center">@item.itemOrder</td>
										<td class="ext-center">@item.isActive</td>
										<td class="ext-center">@item.ItHot</td>
										<td class="ext-center">
											<a asp-area="Admin" asp-controller="Categories" asp-action="Edit"
										   asp-route-id="@item.id" class="btn btn-primary btn-sm"
										   title="Sửa nội dung bài viết"><i class="bi bi-pencil"></i></a>
											<a asp-area="Admin" asp-controller="Categories" asp-action="Delete"
										   asp-route-id="@item.id" class="btn btn-danger btn-sm"
										   title="Xóa thông tin bài viết"><i class="bi bi-trash"></i></a>
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</section>
</main>
