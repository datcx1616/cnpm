@using DO_AN_1.Models;
@model IList<Blog>
@{
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
	<div class="pagetitle">
		<h2>Danh sách Blog</h2>
	</div>
	<p>
		<a class="btn btn-success" asp-area="Admin" asp-controller="Blog" asp-action="Create">
			<i class="bi bi-file-earmark-text me-1"></i>Thêm Blog
		</a>
	</p>
	<section class="section dashboard">
		<div class="row">
			<div class="col-12">
				<div class="card recent-sales overflow-auto">
					<div class="card-body mt-4">

						<table class="table table-borderless datatable">
							<thead>
								<tr>
									<th class="col-1 text-center">#</th>
									<th class="col-3 text-center">Tiêu Đề</th>
									<td class="col-2 text-center">Bài viết</td>
									@*<td class="col-2 text-center">Menu cha</td>*@
									<td class="col-1 text-center">Thứ tự</td>
									<td class="col-1 text-center">Ẩn/Hiện</td>
									<th class="col-2 text-center">Chức năng</th>

								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<th class="text-center" scope="row">@item.Id</th>
										<td>
											<a asp-area="Admin" asp-controller="Blog" asp-action="Details"
										   asp-route-id="@item.Id" class="text-primary">@item.Title</a>
										</td>
										<td class="ext-center">@item.Content</td>
										<td class="ext-center">@item.Category</td>
										<td class="ext-center">@item.View</td>
										<td class="ext-center">@item.Status</td>
										<td class="ext-center">
											<a asp-area="Admin" asp-controller="Blog" asp-action="Edit"
										   asp-route-id="@item.Id" class="btn btn-primary btn-sm"
										   title="Sửa nội dung bài viết"><i class="bi bi-pencil"></i></a>
											<a asp-area="Admin" asp-controller="Blog" asp-action="Delete"
										   asp-route-id="@item.Id" class="btn btn-danger btn-sm"
										   title="Xóa thông tin bài viết"><i class="bi bi-trash"></i></a>
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</section>
</main>