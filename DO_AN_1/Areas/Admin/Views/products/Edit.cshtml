@model DO_AN_1.Models.products
@using DO_AN_1.Utilities;
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Chỉnh sửa sản phẩm</h2>
    </div>
    <div class="container shadow p-5">
        <div class="row pb-2">
            <h2>Chỉnh sửa sản phẩm</h2>
        </div>
    </div>
    <form method="post" asp-action="Create">
        <div asp-validation-summary="All"></div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="name">name</label>
                <input type="text" class="form-control mb-3" asp-for="name">
                <span class="alert-danger" asp-validation-for="name"></span>
            </div>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="price">price</label>
            <input type="text" class="form-control mb-3" asp-for="price">
            <span class="alert-danger" asp-validation-for="price"></span>

            @* <select class="form-select" asp-for="price" id="Levels">
            <option value="1">1</option>
            <option value="2">2</option>
            </select>*@
        </div>
        @*<div class="form-group col-md-6">
        <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
        <label asp-for="image">image</label>
        <select class="form-control" asp-for="image" asp-items="@(new SelectList(ViewBag.mnlist, "Value", "Text"))">
        </select>
        </div>*@
        <div class="form-group col-md-6">
            <label asp-for="Class">Class</label>
            <input type="text" class="form-control mb-3" asp-for="Class">
            <span class="alert-danger" asp-validation-for="Class"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="image">image</label>
            <input type="text" class="form-control mb-3" asp-for="image">
            <span class="alert-danger" asp-validation-for="image"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="isActive">isActive</label>
            <input type="text" class="form-control mb-3" asp-for="isActive">
            <span class="alert-danger" asp-validation-for="isActive"></span>
        </div>

        <div class="form-group mt-5 mb-5">
            <label>
                @Html.CheckBox("IsActive", false)
                Hiển thị
            </label>
        </div>
        <button type="submit" class="btn btn-primary p-2">Sửa</button>
        <a asp-controller="products" asp-action="Index" class="btn btn-lg btn-warning p-2">Quay lại</a>
    </form>
</main>
