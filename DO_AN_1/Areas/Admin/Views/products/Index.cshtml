@using DO_AN_1.Models;
@model IList<products>
@{
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
	<div class="pagetitle">
		<h2>Danh sách sản phẩm</h2>
	</div>
	<p>
		<a class="btn btn-success" asp-area="Admin" asp-controller="products" asp-action="Create">
			<i class="bi bi-file-earmark-text me-1"></i>Thêm sản phẩm
		</a>
	</p>
	<section class="section dashboard">
		<div class="row">
			<div class="col-12">
				<div class="card recent-sales overflow-auto">
					<div class="card-body mt-4">

						<table class="table table-borderless datatable">
							<thead>
								<tr>
									<th class="col-1 text-center">#</th>
									<th class="col-3 text-center">Tên sảm phẩm</th>
									<td class="col-2 text-center">Giá sản phẩm</td>
									<td class="col-1 text-center">Ảnh sản phẩm</td>
									@*<td class="col-1 text-center">Ẩn/Hiện</td>*@
									<th class="col-2 text-center">Chức năng</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<th class="text-center" scope="row">@item.id</th>
										<td>
											<a asp-area="Admin" asp-controller="Menu" asp-action="Details"
										   asp-route-id="@item.id" class="text-primary">@item.name</a>
										</td>
										<td class="ext-center">@item.price</td>
										<td class="ext-center">@item.image</td>
										<td class="ext-center">@item.categoryid</td>
										<td class="ext-center">@item.content</td>
										<td class="ext-center">
											<a asp-area="Admin" asp-controller="products" asp-action="Edit"
										   asp-route-id="@item.id" class="btn btn-primary btn-sm"
										   title="Sửa thông tin sảm phẩm"><i class="bi bi-pencil"></i></a>
											<a asp-area="Admin" asp-controller="products" asp-action="Delete"
										   asp-route-id="@item.id" class="btn btn-danger btn-sm"
										   title="Xóa thông tin sản phẩm"><i class="bi bi-trash"></i></a>
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</section>
</main>
